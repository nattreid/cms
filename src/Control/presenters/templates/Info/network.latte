{snippet network}
    {ifset $server->network}
        <div class="cell networkInfo">
            <div class="header">
                {_'crm.info.network.info'}
            </div>
            <table>
                <tr class="odd">
                    <th>{_'crm.info.network.device'}</th>
                    <th>{_'crm.info.network.ip'}</th>
                    <th>{_crm.info.network.ip6}</th>
                    <th>{_'crm.info.network.mac'}</th>
                    <th>{_'crm.info.network.recieve'}</th>
                    <th>{_'crm.info.network.sent'}</th>
                    <th>{_'crm.info.network.error'}/{_'crm.info.network.drop'}</th>
                </tr>
                {foreach $server->network as $network}
                    <tr n:class="$iterator->counter % 2 == 1 ? even">
                        <td><strong>{$network->name}</strong></td>
                        <td>{isset($network->ip) ? $network->ip}</td>
                        <td>{$network->ip6}</td>
                        <td>{isset($network->mac) ? $network->mac}</td>
                        <td>{$network->recieve|size:2}</td>
                        <td>{$network->sent|size:2}</td>
                        <td>{$network->error}/{$network->drop}</td>
                    </tr>
                {/foreach}
            </table>
        </div>
    {/ifset}
{/snippet}